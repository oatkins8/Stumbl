<div class="sign-in-page" style="background: linear-gradient(45deg, #76f2e4, #f8f9fa)">
  <div class="container">
  <br>
    <div class="login-form">
      <div class="sign-in">
      <h1><strong>Sign In</strong></h1>
      <div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: false, placeholder: 'Your email',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: false, placeholder: 'Your password',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions button-general">
        <%= f.button :submit, "Sign In" %>
      </div>
    <% end %>
  </div>
  <div class="devise-login">
    <%= render "devise/shared/links" %>
  </div>
  </div>
  </div>
  </div>
</div>
