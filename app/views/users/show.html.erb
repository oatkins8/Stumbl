<ul class="nav nav-tabs user-nav justify-content-center" id="myTab" role="tablist">
  <li class="nav-item" style="background-color: #068D9D  ;" role="presentation">
    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">My Events</button>
  </li>
  <li class="nav-item " style="background-color: #068D9D ;" role="presentation">
    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">My Venues</button>
  </li>
</ul>
<h2 class="welcome_top">  Welcome <strong><%= current_user.first_name %> <%= current_user.last_name%></strong> here are </h2>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active " id="home" role="tabpanel" aria-labelledby="home-tab">
    <h2 class="welcome_bottom">Your <strong> Stumbl </strong> Events</h2>
    <div>
      <% current_user.bookings.each do |booking| %>
        <div class="profile_card">
          <%= link_to event_path(booking.event) do %>
            <h3 class="ticket_title"> Event Ticket </h3>
            <div class="qr_box">
              <%= image_tag("qr_code.png", height: '200', width: '200', class: "ticket_code")%>
            </div>
            <div class="ticket_info">
              <h3 class="event_title"><%= booking.event.name %></h3>
              <p style="text-align:center"><strong>@ <%= booking.event.venue.name %> </strong> </p>
              <p style="text-align:left"><strong>Address  &#128205; :</strong> <%= booking.event.venue.location %></p>
              <p style="text-align:left"><strong>Date &#128198; : </strong> <%= booking.event.date.to_formatted_s(:long) %></p>
              <p style="text-align:left"><strong>Time  &#8986;: </strong> <%= booking.event.time.to_formatted_s(:time) %></p>
              <p style="text-align:left"><strong>Ticket Quantity &#127915; : </strong> <%= booking.quantity %></p>
              <% total = booking.event.price * booking.quantity %>
              <p style="text-align:left"><strong>Total Price  &#128181; : Â£ </strong><%= total %> </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <h2 class="welcome_bottom">Your <strong> Stumbl </strong> Venues</h2>
    <%= link_to "Add New Venue".html_safe, new_venue_path, class: "button-general" %>
    <% current_user.venues.each do |venue|  %>
      <%= link_to venue_path(venue) do %>
        <div class="card-product">
          <%# <img src="venue.png" /> %>
          <%= image_tag("venue.png")%>
          <div class="card-product-infos">
            <h2><strong>Venue Name: </strong><%= venue.name %></h2>
            <p><strong>Venue Location &#128205; :</strong><%= venue.location %>.</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
